<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="jpa-persistence" transaction-type="RESOURCE_LOCAL">
    <class>it.bz.idm.bdp.dal.DataType</class>
      <class>it.bz.idm.bdp.dal.DataTypeMetaData</class>
    <class>it.bz.idm.bdp.dal.Measurement</class>
    <class>it.bz.idm.bdp.dal.MetaData</class>
    <class>it.bz.idm.bdp.dal.Provenance</class>
    <class>it.bz.idm.bdp.dal.Station</class>
    <class>it.bz.idm.bdp.dal.Edge</class>
      <class>it.bz.idm.bdp.dal.Event</class>
    <class>it.bz.idm.bdp.dal.Location</class>
    <class>it.bz.idm.bdp.dal.MeasurementJSON</class>
    <class>it.bz.idm.bdp.dal.MeasurementString</class>
    <class>it.bz.idm.bdp.dal.MeasurementHistory</class>
    <class>it.bz.idm.bdp.dal.MeasurementJSONHistory</class>
    <class>it.bz.idm.bdp.dal.MeasurementStringHistory</class>
         <properties>
           <property name="hibernate.default_schema" value="intimev2"/>
           <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
           <property name="hibernate.hbm2ddl.auto" value="none"/>
           <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
           <property name="hibernate.hikari.dataSourceClassName" value="org.postgresql.ds.PGSimpleDataSource"/>
           <property name="hibernate.hikari.maximumPoolSize" value="2" />
          <property name="hibernate.hikari.dataSource.serverName" value="postgres"/>
           <property name="hibernate.hikari.dataSource.portNumber" value="5432"/>
           <property name="hibernate.hikari.dataSource.databaseName" value="bdp"/>
           <property name="hibernate.hikari.dataSource.user" value="bdp"/>
           <property name="hibernate.hikari.dataSource.password" value='password'/>
           <property name="hibernate.id.new_generator_mappings" value="true"/>
           <property name="hibernate.show_sql" value="false"/>
           <property name="hibernate.hbm2dll.extra_physical_table_types" value="MATERIALIZED VIEW"/>
           <property name="hibernate.implicit_naming_strategy" value="it.bz.idm.bdp.dal.util.SchemaGeneratorImplicitNamingStrategy"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
           <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.jcache.JCacheRegionFactory"/>
    </properties>
    </persistence-unit>
</persistence>
