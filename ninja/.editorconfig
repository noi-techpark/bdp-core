# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{md,yml,json}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{java,xml}]
indent_style = tab
indent_size = 4
